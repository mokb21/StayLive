@model StayLive.Models.Login.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/stay-live.png">
    <title>Stay Live | Login</title>
    @Styles.Render("~/Content/main-style")
    @Styles.Render("~/Content/custom-style")
</head>

<body>
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>

    <section id="wrapper" class="login-register login-sidebar" style="background-image: url(./assets/images/Login.jpg); ">
        <div class="login-box card">
            <div class="card-body">
                @using (Html.BeginForm("Index", "Login", new { @area = "" }, FormMethod.Post, new { @id = "LoginForm", @class = "form-horizontal form-material", @style = "margin-top:100px" })) 
                {
                    <a href="javascript:void(0)" class="text-center db"><img src="./assets/images/stay-live.png" alt=" home" width="170px" /><br /></a>

                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", @placeholder = "" + StayLive.Resources.General.UserName })
                            @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(a => a.Password, new { @class = "form-control", @placeholder = "" + StayLive.Resources.General.Password, @type = "password" })
                            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                    <div class="m-t-40 m-l-40 p-l-20">
                        <a href="@Url.Empty()" class="btn btn-facebook waves-effect btn-circle waves-light white-text"> <i class="fa fa-facebook"></i> </a>
                        <a href="@Url.Empty()" class="btn btn-twitter waves-effect btn-circle waves-light white-text"> <i class="fa fa-twitter"></i> </a>
                        <a href="@Url.Empty()" class="btn btn-instagram waves-effect btn-circle waves-light white-text"> <i class="fa fa-instagram"></i> </a>
                        <a href="@Url.Empty()" class="btn btn-linkedin waves-effect btn-circle waves-light white-text"> <i class="fa fa-linkedin"></i> </a>
                        <a href="@Url.Empty()" class="btn btn-youtube waves-effect btn-circle waves-light white-text"> <i class="fa fa-youtube"></i> </a>
                    </div>
                }
            </div>
        </div>
    </section>
    @Scripts.Render("~/bundles/main-script")
    <script>
            @Html.Raw((string)TempData["im"])@{bool  x = TempData.Remove("im");}
    </script>
</body>
</html>
