@model StayLive.areas.Tickets.Models.TicketReply.TicketReplyRow
@if (Model.isReverse)
{
    <li class="reverse">
        <div class="chat-content">
            <h5>@Model.User<small class="text-info"> on @Model.CreatedDate</small></h5>
            <div class="box bg-light-inverse @Model.Status text-left">
                @Html.Raw(Model.Message)
                @if (Model.hasAttachment || Model.isInternal)
                {
                    <br />
                }
                @if (Model.hasAttachment)
                {
                    <a class="text-white pull-right m-r-10" href="@Url.Action("Download", "Ticket", new { @area = "Tickets", @Id = Model.Id, @Type = (Model.isTicket ? "ticket" : "reply") })" title="@Model.AttachmentFileName"><i class="fa fa-chain"></i></a>
                }
                @if (Model.isInternal)
                {
                    <a class="text-white pull-right m-r-10" href="@Url.Empty()" title="@StayLive.Resources.Tickets.Internall"><i class="mdi mdi-eye-off"></i></a>
                }
            </div>
        </div>
        <div class="chat-img"><img src="@Url.DrawImage("u", new string[] { "Id", SessionHelper.AccountId.ToString() })" alt="user" /></div>
    </li>
}
else
{
    <li>
        <div class="chat-img"><img src='@Url.DrawImage("u", new string[] { "Id", (Model.UserId == null ? "0" : Model.UserId.ToString()) })' alt="user" /></div>
        <div class="chat-content">
            <h5>@Model.User<small class="text-info"> on @Model.CreatedDate</small></h5>
            <div class="box bg-light-inverse @Model.Status text-left">
                @Html.Raw(Model.Message)
                @if (Model.hasAttachment || Model.isInternal)
                {
                    <br />
                }
                @if (Model.hasAttachment)
                {
                    <a class="text-white pull-right m-r-10" href="@Url.Action("Download", "Ticket", new { @area = "Tickets", @Id = Model.Id, @Type = (Model.isTicket ? "ticket" : "reply") })" title="@Model.AttachmentFileName"><i class="fa fa-chain"></i></a>
                }
                @if (Model.isInternal)
                {
                    <a class="text-white pull-right m-r-10" href="@Url.Empty()" title="@StayLive.Resources.Tickets.Internall"><i class="mdi mdi-eye-off"></i></a>

                }
            </div>
        </div>
    </li>
}
